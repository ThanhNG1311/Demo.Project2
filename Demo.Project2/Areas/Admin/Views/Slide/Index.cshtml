@model IEnumerable<Demo.Project2.Models.Slide>

@{
    ViewData["Title"] = "Slide";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Slide</h1>

<p>
    <a asp-area="admin" asp-controller="slide" asp-action="create" class="btn btn-primary">
        <i class="bi bi-plus"></i>Slide
    </a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">Danh sách slide</div>
            <div class="card-body">
                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tên</th>
                            <th>Hình ảnh</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model) {
                        <tr class="">
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>
                                <img src="~/admin/images/slides/@item.Image" width="120" />
                            </td>
                            <td>@item.Status</td>
                            <td>
                                <a asp-area="admin" asp-controller="slide" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary">
                                    <i class="bi bi-card-text"></i>
                                </a>
                                <a asp-area="admin" asp-controller="slide" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-area="admin" asp-controller="slide" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Mã</th>
                            <th>Tên</th>
                            <th>Hình ảnh</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>