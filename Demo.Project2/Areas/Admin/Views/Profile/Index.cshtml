@model Demo.Project2.Models.User

@{
    ViewData["Title"] = "Trang cá nhân";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Trang cá nhân</h1>

<h4>Thông tin chung</h4>
<hr />
<div class="">
    <div class="">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Username" class="control-label">Tài khoản</label>
                <input asp-for="Username" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Họ và tên</label>
                <input asp-for="FullName" type="text" class="form-control" readonly="readonly" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="text" class="form-control" readonly="readonly" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <span class="text-success">@ViewBag.Success</span>
            <div class="form-group mt-3">
                <a asp-area="admin" asp-controller="profile" asp-action="update" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a>
                <a asp-area="admin" asp-controller="profile" asp-action="updatePassword" asp-route-id="@Model?.Id" class="btn btn-primary">Đổi mật khẩu</a>
                <a asp-area="admin" asp-controller="home" asp-action="index" class="btn btn-primary">Quay lại</a>
            </div>
        </form>
    </div>
</div>