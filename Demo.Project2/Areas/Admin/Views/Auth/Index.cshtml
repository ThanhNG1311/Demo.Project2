@model Demo.Project2.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/dist/css/bootstrap.min.css">
    <style>
        section {
            margin-top: 200px;
        }
    </style>
    <title>Đăng nhập quản lý</title>
</head>

<body>
    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-6 col-lg-5 col-xl-4 m-auto">
                    <div class="card bg-light border border-dark-subtle shadow">
                        <div class="card-body mx-auto">
                            <h2>Đăng Nhập Admin</h2>
                            <form asp-area="admin" asp-controller="auth" asp-action="login" method="post">
                                <input asp-for="Username" type="text" name="username" class="form-control my-4 py-2" placeholder="Tài khoản" />
                                <input asp-for="Password" type="password" name="password" class="form-control my-4 py-2" placeholder="Mật khẩu" />
                                <span class="text-danger">@ViewBag.Error</span>
                                <div class="text-center my-3">
                                    <button class="btn btn-primary" type="submit">Đăng nhập</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-light py-3 mt-auto fixed-bottom">
        <div class="container-fluid">
            <div class="d-flex small">
                <div class="text-muted ms-auto">Copyright &copy; Thanh Thuy Store 2023</div>
            </div>
        </div>
    </footer>

    <script src="~/assets/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>