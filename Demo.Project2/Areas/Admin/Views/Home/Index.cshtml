
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thống kê</h1>

<div class="row">
    <div class="col-sm-6 col-lg-3">
        <div class="card text-bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Phân loại</h5>
                <p class="card-text">@ViewBag.CountChildCategories phân loại</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card text-bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm</h5>
                <p class="card-text">@ViewBag.CountProducts sản phẩm</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card text-bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Tài khoản</h5>
                <p class="card-text">@ViewBag.CountUsers tài khoản</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card text-bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Đơn hàng</h5>
                <p class="card-text">@ViewBag.CountOrders đơn hàng chờ xử lý</p>
            </div>
        </div>
    </div>
</div>