@model Demo.Project2.Models.Product

@{
    ViewData["Title"] = "Tạo sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sản phẩm</h1>

<h4>Tạo sản phẩm mới</h4>
<hr />
<div class="">
    <div class="">
        <form asp-area="admin" asp-controller="product" asp-action="create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">Mã</label>
                <input asp-for="Code" class="form-control" required="required" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" required="required" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Hình ảnh</label>
                <img src="#" class="showImage" width="200" alt="" />
                <input asp-for="Image" type="file" name="image" class="image form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Phân loại</label>
                <select asp-for="CategoryId" class="form-control form-select" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label">Thông số</label>
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Kho</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    Nổi bật
                    <input class="form-check-input" asp-for="IsFeatured" />
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    Hoạt động
                    <input class="form-check-input" asp-for="IsActive" />
                </label>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
            <div class="form-group mt-3">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-area="admin" asp-controller="product" asp-action="index" class="btn btn-primary">Quay lại</a>
            </div>
        </form>
    </div>
</div>