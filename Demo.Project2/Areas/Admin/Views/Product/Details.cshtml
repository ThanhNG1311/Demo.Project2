@model Demo.Project2.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sản phẩm</h1>

<h4>Chi tiết sản phẩm</h4>
<hr />
<div class="">
    <div class="">
        <form>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label">Mã</label>
                <input asp-for="Code" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Hình ảnh</label>
                <img src="~/admin/images/products/@Model.Image" width="200" alt="" />
            </div>
            <div class="form-group">
                <label asp-for="Category!.Name" class="control-label">Phân loại</label>
                <input asp-for="Category!.Name" class="form-control form-select" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="10" readonly></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label">Thông số</label>
                <textarea asp-for="Details" class="form-control" rows="10" readonly></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Kho</label>
                <input asp-for="Stock" class="form-control" readonly />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    Nổi bật
                    <input class="form-check-input" asp-for="IsFeatured" disabled />
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    Hoạt động
                    <input class="form-check-input" asp-for="IsActive" disabled />
                </label>
            </div>
            <div class="form-group my-3">
                <a asp-area="admin" asp-controller="product" asp-action="edit" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a>
                <a asp-area="admin" asp-controller="product" asp-action="index" class="btn btn-primary">Quay lại</a>
            </div>
        </form>
        <h4>Bình luận sản phẩm</h4>
        <hr />
@foreach (var item in Model!.Reviews) {
            <div class="card mt-3">
                <div class="card-body">
                    <h6>@item.Username</h6>
                    <small class="text-secondary">@item.CreatedOn</small>
                    <p>@item.Text</p>
                </div>
            </div>
}
    </div>
</div>