@model Demo.Project2.Models.User

@{
    ViewData["Title"] = "Trang cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h3>Trang cá nhân</h3>
    <h4>Thông tin chung</h4>
    <div class="">
        <form>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Username" class="control-label">Tài khoản</label>
                <input asp-for="Username" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Họ và tên</label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group mt-3">
                <a asp-controller="profile" asp-action="edit" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a>
                <a asp-controller="profile" asp-action="editPassword" asp-route-id="@Model?.Id" class="btn btn-primary">Đổi mật khẩu</a>
                <a asp-controller="profile" asp-action="orderHistory" asp-route-id="@Model?.Id" class="btn btn-primary">Lịch sử đơn hàng</a>
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Quay lại</a>
            </div>
        </form>
    </div>
</div>