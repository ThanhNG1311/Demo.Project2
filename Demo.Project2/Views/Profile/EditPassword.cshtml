@model Demo.Project2.Models.User

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h3>Trang cá nhân</h3>
    <h4>Đổi mật khẩu</h4>
    <div class="">
        <form asp-controller="profile" asp-action="editPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Username" class="control-label">Tài khoản</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <span class="text-success">@ViewBag.Success</span>
            <span class="text-danger">@ViewBag.Error</span>
            <div class="form-group mt-3">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a asp-controller="profile" asp-action="index" class="btn btn-primary">Quay lại</a>
            </div>
        </form>
    </div>
</div>