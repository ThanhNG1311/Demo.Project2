@model IEnumerable<Demo.Project2.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm theo phân loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5">
    <h3>Sản phẩm theo phân loại</h3>
    <hr />
    <div class="row">
@foreach (var item in Model) {
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-4">
                        <img href="#" src="~/admin/images/products/@item.Image" class="product-image img-fluid rounded" alt="">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <a asp-controller="product" asp-action="details" asp-route-id="@item.Id" class="card-title fw-bold">@item.Name</a>
                            <p class="card-text">@(item.Price) VND</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}
    </div>
</div>