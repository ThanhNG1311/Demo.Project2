@model IEnumerable<Demo.Project2.Models.Category>

@foreach (var item in Model) {
<div class="dropend border-bottom">
    <a class="nav-link" role="button" data-bs-toggle="dropdown" aria-expanded="false">@item.Name</a>
    <ul class="dropdown-menu">
    @foreach (var childItem in item.ChildCategories.TakeWhile(b => b.IsActive)) {
        <li>
            <a asp-controller="product" asp-action="getProductsByCategory" asp-route-id="@childItem.Id" class="dropdown-item">@childItem.Name</a>
        </li>
    }
    </ul>
</div>
}