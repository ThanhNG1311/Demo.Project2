@model IEnumerable<Demo.Project2.Models.Product>

@foreach (var item in Model) {
<div class="col-md-12 col-lg-4">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-4">
                <img src="~/admin/images/products/@item.Image" class="product-image img-fluid rounded" alt="">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <a asp-controller="product" asp-action="details" asp-route-id="@item.Id" class="card-title fw-bold">@item.Name</a>
                    <p class="card-text">@(item.Price) VND</p>
                </div>
            </div>
        </div>
    </div>
</div>
}