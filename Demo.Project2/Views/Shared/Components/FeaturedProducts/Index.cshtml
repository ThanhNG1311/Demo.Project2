@model IEnumerable<Demo.Project2.Models.Product>

<style>
    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    a {
        text-decoration: none;
    }
</style>

@foreach (var item in Model) {
<div class="col-xs-12 col-sm-6 col-lg-3">
    <div class="card text-bg-light mb-3">
        <img href="#" src="~/admin/images/products/@item.Image" class="product-image rounded" alt="">
        <div class="card-body mx-auto">
            <a href="#" class="card-title fw-bold">@item.Name</a>
            <p class="card-text">@(item.Price) VND</p>
        </div>
    </div>
</div>
}